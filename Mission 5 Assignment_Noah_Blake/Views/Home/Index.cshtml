@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Soccer Mallz</h1>
    <p class="lead">The one stop shop for all things soccer</p>
</div>

<div class="row mt-4 align-items-center">
    <div class="col-md-5 text-center">
        <img src="~/img/goat.jpg" alt="Soccer inspiration image 1" class="img-fluid rounded shadow-sm hobby-image" />
    </div>
    <div class="col-md-7">
        <p>I have been playing soccer since I was 2 years old. It is my passion since as long as I can remember and because of that I want to share it with all of you</p>
    </div>
</div>

<div class="row mt-4 align-items-center">
    <div class="col-md-5 text-center order-md-2">
        <img src="~/img/haaland.webp" alt="Soccer inspiration image 2" class="img-fluid rounded shadow-sm hobby-image" />
    </div>
    <div class="col-md-7 order-md-1">
        <p>As the World cup gets closer check back here for updates and live podcasts</p>
    </div>
</div>

<style>
    .hobby-image {
        width: 100%;
        height: 280px;
        object-fit: cover;
        object-position: top;
    }
</style>
